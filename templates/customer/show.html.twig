{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Imię</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Numer telefonu</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Numer rejestracyjny</th>
                <td>{{ customer.registrationNumber }}</td>
            </tr>
            <tr>
                <th>Marka pojazdu</th>
                <td>{{ customer.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ customer.model }}</td>
            </tr>
            <tr>
                <th>EngineCapacity</th>
                <td>{{ customer.engineCapacity }}</td>
            </tr>
            <tr>
                <th>Rok produkcji</th>
                <td>{{ customer.productionYear }}</td>
            </tr>
            <tr>
                <th>EnginePower</th>
                <td>{{ customer.enginePower }}</td>
            </tr>
            <tr>
                <th>Numer VIN</th>
                <td>{{ customer.vinNumber }}</td>
            </tr>
            <tr>
                <th>Przebieg</th>
                <td>{{ customer.mileage }}</td>
            </tr>
            <tr>
                <th>Usługa</th>
                <td>{{ customer.service }}</td>
            </tr>
            <tr>
                <th>Data wizyty</th>
                <td>{{ customer.reservationDate ? customer.reservationDate|date('Y-m-d h:00') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
